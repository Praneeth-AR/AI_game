
#:import math math
##:include debug.kv

<StrategyGame>:
    id: _game
    main_map: _main_map
    status: _stats
    map_rows: 5
    map_cols: 5
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            id: _main_map
            game: _game
            size_hint: .75, 1
            orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint: .25, 1
            Label:
                id: _stats
                text: 'status'
                size_hint: 1, .66
                canvas.before:
                    Color:
                        rgba: .49, .49, .81, 1
                    Rectangle:
                        pos: _stats.pos
                        size: _stats.size
            Button:
                text: 'mini-map'
                size_hint: 1, .33
                background_color: .75, .71, .99, 1
